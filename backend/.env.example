# Environment Configuration
NODE_ENV=development
PORT=3000

# Azure AD (Entra ID)
AZURE_AD_TENANT_ID=your-tenant-id
AZURE_AD_CLIENT_ID=your-client-id
AZURE_AD_CLIENT_SECRET=your-client-secret

# Database
SQL_SERVER=your-sql-server.database.windows.net
SQL_DATABASE=spexternal
SQL_USER=sqladmin
SQL_PASSWORD=your-password

# Cosmos DB
COSMOS_DB_ENDPOINT=https://your-account.documents.azure.com:443/
COSMOS_DB_KEY=your-cosmos-key
COSMOS_DB_DATABASE=spexternal

# Azure Key Vault
KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# JWT
JWT_SECRET=your-jwt-secret-for-verification-tokens

# API Configuration
API_BASE_URL=https://api.spexternal.com
APP_BASE_URL=https://app.spexternal.com

# Marketplace (for production)
MARKETPLACE_API_VERSION=2018-08-31

# Logging
LOG_LEVEL=info

# Email Service (optional - configure your email provider)
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=your-email-api-key
EMAIL_FROM=noreply@spexternal.com

# Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=your-app-insights-connection-string
