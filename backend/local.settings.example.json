# Local Settings Example
# Copy this file to local.settings.json and update with your values

{
  "IsEncrypted": false,
  "Values": {
    "AzureWebJobsStorage": "UseDevelopmentStorage=true",
    "FUNCTIONS_WORKER_RUNTIME": "node",
    
    # Database Configuration
    "SQL_SERVER": "localhost",
    "SQL_DATABASE": "spexternal_dev",
    "SQL_USER": "sa",
    "SQL_PASSWORD": "YourStrong@Passw0rd",
    
    # Azure AD Configuration
    "AZURE_CLIENT_ID": "12345678-1234-1234-1234-123456789abc",
    "AZURE_CLIENT_SECRET": "your-client-secret-here",
    "AZURE_TENANT_ID": "common",
    "AZURE_AD_AUDIENCE": "api://12345678-1234-1234-1234-123456789abc",
    "AZURE_AD_ISSUER": "https://sts.windows.net/",
    
    # Key Vault (Optional for local dev)
    "KEY_VAULT_URL": "",
    
    # CORS Configuration
    "CORS_ALLOWED_ORIGINS": "https://*.sharepoint.com,https://*.sharepoint-df.com,http://localhost:4321",
    
    # Feature Flags
    "ENABLE_GRAPH_INTEGRATION": "false",
    "ENABLE_AUDIT_LOGGING": "true",
    
    # Rate Limiting
    "RATE_LIMIT_WINDOW_MS": "60000",
    
    # Environment
    "NODE_ENV": "development"
  },
  "Host": {
    "LocalHttpPort": 7071,
    "CORS": "*",
    "CORSCredentials": false
  }
}
