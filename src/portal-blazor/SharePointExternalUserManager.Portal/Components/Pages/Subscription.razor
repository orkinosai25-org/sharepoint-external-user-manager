@page "/subscription"
@attribute [Authorize]
@inject Services.ApiClient ApiClient
@inject NavigationManager Navigation
@inject ILogger<Subscription> Logger

<PageTitle>Subscription Management - ClientSpace</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1>Subscription Management</h1>
            <p class="text-muted">Manage your subscription plan and billing</p>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="row mb-4">
            <div class="col-md-8">
                <SharePointExternalUserManager.Portal.Components.Shared.SkeletonDetailCard ShowExtraRows="true" />
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header bg-light">
                        <div class="skeleton skeleton-text skeleton-text-md" style="width: 120px;"></div>
                    </div>
                    <div class="card-body">
                        <div class="skeleton skeleton-text skeleton-text-sm mb-2" style="width: 80%;"></div>
                        <div class="skeleton skeleton-text skeleton-text-sm mb-2" style="width: 60%;"></div>
                        <div class="skeleton skeleton-rect mt-3" style="height: 40px;"></div>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-circle me-2"></i>
            @errorMessage
            <button class="btn btn-sm btn-outline-danger ms-3" @onclick="LoadSubscription">
                <i class="bi bi-arrow-clockwise"></i> Retry
            </button>
        </div>
    }
    else if (subscription != null)
    {
        <!-- Current Plan Card -->
        <div class="row mb-4">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-star-fill me-2"></i>
                            Current Plan
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <h2 class="mb-3">@subscription.Tier Plan</h2>
                                <p class="mb-2">
                                    <strong>Status:</strong>
                                    <span class="badge @GetStatusBadgeClass(subscription.Status)">
                                        @subscription.Status
                                    </span>
                                </p>
                                
                                @if (subscription.StartDate.HasValue)
                                {
                                    <p class="mb-2">
                                        <strong>Started:</strong> @subscription.StartDate.Value.ToString("MMM dd, yyyy")
                                    </p>
                                }

                                @if (subscription.TrialExpiry.HasValue && trialDaysRemaining.HasValue)
                                {
                                    <p class="mb-2">
                                        <strong>Trial Expires:</strong>
                                        <span class="@(trialDaysRemaining <= 3 ? "text-danger" : "text-warning")">
                                            @subscription.TrialExpiry.Value.ToString("MMM dd, yyyy")
                                            (@trialDaysRemaining days remaining)
                                        </span>
                                    </p>
                                }

                                @if (subscription.Status == "Cancelled" && subscription.EndDate.HasValue)
                                {
                                    <p class="mb-2">
                                        <strong>Cancelled:</strong> @subscription.EndDate.Value.ToString("MMM dd, yyyy")
                                    </p>
                                }
                            </div>
                            <div class="col-md-6 text-end">
                                @if (subscription.IsActive)
                                {
                                    <a href="/pricing" class="btn btn-outline-primary mb-2">
                                        <i class="bi bi-arrow-up-circle"></i> Upgrade Plan
                                    </a>
                                    <br />
                                    <button class="btn btn-outline-danger" @onclick="ShowCancelModal">
                                        <i class="bi bi-x-circle"></i> Cancel Subscription
                                    </button>
                                }
                                else
                                {
                                    <a href="/pricing" class="btn btn-primary">
                                        <i class="bi bi-star"></i> Subscribe Now
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h6 class="text-muted mb-3">Plan Features</h6>
                        
                        @if (subscription.Limits != null)
                        {
                            <div class="mb-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span>Client Spaces</span>
                                    <strong>@(subscription.Limits.MaxClientSpaces?.ToString() ?? "Unlimited")</strong>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span>External Users</span>
                                    <strong>@(subscription.Limits.MaxExternalUsers?.ToString() ?? "Unlimited")</strong>
                                </div>
                            </div>
                        }

                        @if (subscription.Features != null && subscription.Features.Any())
                        {
                            <div class="mt-3 pt-3 border-top">
                                <h6 class="text-muted mb-2">Enabled Features</h6>
                                <ul class="list-unstyled mb-0">
                                    @foreach (var feature in subscription.Features)
                                    {
                                        <li class="mb-1">
                                            <i class="bi bi-check-circle-fill text-success me-1"></i>
                                            @feature
                                        </li>
                                    }
                                </ul>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Trial Expiring Warning -->
        @if (subscription.Status == "Trial" && trialDaysRemaining.HasValue && trialDaysRemaining.Value <= 7 && subscription.TrialExpiry.HasValue)
        {
            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="alert alert-@(trialDaysRemaining.Value <= 3 ? "danger" : "warning")">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                <strong>Trial Expiring Soon!</strong>
                                Your trial expires in @trialDaysRemaining.Value days (@subscription.TrialExpiry.Value.ToString("MMM dd, yyyy")).
                                Upgrade now to continue using all features without interruption.
                            </div>
                            <a href="/pricing" class="btn btn-@(trialDaysRemaining.Value <= 3 ? "danger" : "warning")">
                                <i class="bi bi-arrow-up-circle"></i> Upgrade Now
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Billing Information -->
        @if (!string.IsNullOrEmpty(subscription.StripeSubscriptionId))
        {
            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="bi bi-credit-card me-2"></i>
                                Billing Information
                            </h5>
                        </div>
                        <div class="card-body">
                            <p>Your subscription is managed through Stripe.</p>
                            <p class="mb-0">
                                <strong>Subscription ID:</strong>
                                <code>@subscription.StripeSubscriptionId</code>
                            </p>
                            @if (!string.IsNullOrEmpty(subscription.StripeCustomerId))
                            {
                                <p class="mb-0">
                                    <strong>Customer ID:</strong>
                                    <code>@subscription.StripeCustomerId</code>
                                </p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

<!-- Cancel Subscription Modal -->
@if (showCancelModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Cancel Subscription
                    </h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="HideCancelModal"></button>
                </div>
                <div class="modal-body">
                    @if (!string.IsNullOrEmpty(cancelError))
                    {
                        <div class="alert alert-danger">
                            @cancelError
                        </div>
                    }

                    <p>Are you sure you want to cancel your subscription?</p>
                    
                    <div class="alert alert-warning">
                        <strong>Please note:</strong>
                        <ul class="mb-0">
                            <li>You will have a 7-day grace period to reactivate</li>
                            <li>Your data will be preserved during the grace period</li>
                            <li>After the grace period, some features may be limited</li>
                        </ul>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideCancelModal">
                        Keep Subscription
                    </button>
                    <button type="button" class="btn btn-danger" @onclick="CancelSubscription" disabled="@isCancelling">
                        @if (isCancelling)
                        {
                            <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                            <span>Cancelling...</span>
                        }
                        else
                        {
                            <span><i class="bi bi-x-circle me-1"></i> Yes, Cancel Subscription</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private bool isLoading = true;
    private bool showCancelModal = false;
    private bool isCancelling = false;
    private string? errorMessage;
    private string? cancelError;
    private int? trialDaysRemaining;
    
    private Models.SubscriptionStatusResponse? subscription;

    protected override async Task OnInitializedAsync()
    {
        await LoadSubscription();
    }

    private async Task LoadSubscription()
    {
        isLoading = true;
        errorMessage = null;
        
        try
        {
            subscription = await ApiClient.GetMySubscriptionAsync();
            
            // Calculate trial days remaining once during load
            if (subscription?.Status == "Trial" && subscription.TrialExpiry.HasValue)
            {
                var daysRemaining = (subscription.TrialExpiry.Value - DateTime.UtcNow).TotalDays;
                trialDaysRemaining = (int)Math.Max(0, Math.Ceiling(daysRemaining));
            }
            else
            {
                trialDaysRemaining = null;
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to load subscription");
            errorMessage = "Failed to load subscription. Please try again.";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowCancelModal()
    {
        cancelError = null;
        showCancelModal = true;
    }

    private void HideCancelModal()
    {
        showCancelModal = false;
    }

    private async Task CancelSubscription()
    {
        isCancelling = true;
        cancelError = null;

        try
        {
            await ApiClient.CancelSubscriptionAsync();
            
            // Refresh subscription data
            await LoadSubscription();
            
            HideCancelModal();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to cancel subscription");
            cancelError = "Failed to cancel subscription. Please try again or contact support.";
        }
        finally
        {
            isCancelling = false;
        }
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Active" => "bg-success",
            "Trial" => "bg-info",
            "Cancelled" => "bg-danger",
            "Suspended" => "bg-warning",
            "Expired" => "bg-secondary",
            _ => "bg-secondary"
        };
    }
}
