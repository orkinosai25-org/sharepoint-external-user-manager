@page "/onboarding/register"
@using Microsoft.AspNetCore.Components.Authorization
@attribute [Authorize]
@inject Services.ApiClient ApiClient
@inject NavigationManager Navigation
@inject ILogger<TenantRegistration> Logger
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Register Your Organization - ClientSpace</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h2 class="mb-3">Welcome to ClientSpace!</h2>
                        <p class="text-muted">Let's get your organization set up</p>
                    </div>

                    @if (isRegistering)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="mt-3 text-muted">Setting up your organization...</p>
                        </div>
                    }
                    else
                    {
                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                <strong>Registration Failed:</strong> @errorMessage
                                <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
                            </div>
                        }

                        <form @onsubmit="HandleSubmit">
                            <div class="mb-4">
                                <label class="form-label fw-bold">
                                    Organization Name <span class="text-danger">*</span>
                                </label>
                                <input type="text" 
                                       class="form-control form-control-lg" 
                                       @bind="organizationName"
                                       placeholder="e.g., Smith & Associates"
                                       required
                                       maxlength="255" />
                                <small class="form-text text-muted">
                                    Your company or law firm name
                                </small>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold">
                                    Admin Email <span class="text-danger">*</span>
                                </label>
                                <input type="email" 
                                       class="form-control form-control-lg" 
                                       @bind="adminEmail"
                                       placeholder="admin@example.com"
                                       required />
                                <small class="form-text text-muted">
                                    Primary administrator email address
                                </small>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold">Company Website (Optional)</label>
                                <input type="url" 
                                       class="form-control" 
                                       @bind="companyWebsite"
                                       placeholder="https://example.com" />
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold">Industry (Optional)</label>
                                <select class="form-select" @bind="industry">
                                    <option value="">Select an industry...</option>
                                    <option value="Legal">Legal Services</option>
                                    <option value="Accounting">Accounting & Finance</option>
                                    <option value="Consulting">Consulting</option>
                                    <option value="Technology">Technology</option>
                                    <option value="Healthcare">Healthcare</option>
                                    <option value="Real Estate">Real Estate</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold">Country (Optional)</label>
                                <select class="form-select" @bind="country">
                                    <option value="">Select a country...</option>
                                    <option value="GB">United Kingdom</option>
                                    <option value="US">United States</option>
                                    <option value="CA">Canada</option>
                                    <option value="AU">Australia</option>
                                    <option value="NZ">New Zealand</option>
                                    <option value="IE">Ireland</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" 
                                        class="btn btn-primary btn-lg"
                                        disabled="@(!IsFormValid())">
                                    <i class="bi bi-check-circle me-2"></i>
                                    Complete Registration
                                </button>
                            </div>
                        </form>

                        <div class="mt-4 text-center">
                            <small class="text-muted">
                                <i class="bi bi-shield-check me-1"></i>
                                Your data is secure and will only be used for service delivery
                            </small>
                        </div>
                    }
                </div>
            </div>

            @* Info Box *@
            <div class="card mt-4 border-info">
                <div class="card-body">
                    <h6 class="card-title text-info">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        What happens next?
                    </h6>
                    <ul class="mb-0 small">
                        <li>You'll be set up with a <strong>Free trial</strong> (30 days)</li>
                        <li>Next, you'll grant Microsoft permissions for SharePoint access</li>
                        <li>Then you can create client spaces and manage external users</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string organizationName = string.Empty;
    private string adminEmail = string.Empty;
    private string? companyWebsite;
    private string? industry;
    private string? country;
    private bool isRegistering = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        // Pre-fill admin email from authenticated user
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        
        if (user.Identity?.IsAuthenticated == true)
        {
            // Try to get email from claims
            var emailClaim = user.FindFirst("upn") ?? user.FindFirst("email") ?? user.FindFirst("preferred_username");
            if (emailClaim != null)
            {
                adminEmail = emailClaim.Value;
            }
        }

        // Check if tenant is already registered
        try
        {
            var tenantInfo = await ApiClient.GetTenantInfoAsync();
            if (tenantInfo != null)
            {
                // Tenant already registered, redirect to dashboard
                Logger.LogInformation("Tenant already registered, redirecting to dashboard");
                Navigation.NavigateTo("/dashboard", forceLoad: true);
            }
        }
        catch (Exception ex)
        {
            Logger.LogWarning(ex, "Could not check existing tenant status");
        }
    }

    private bool IsFormValid()
    {
        return !string.IsNullOrWhiteSpace(organizationName) && 
               !string.IsNullOrWhiteSpace(adminEmail);
    }

    private async Task HandleSubmit()
    {
        if (!IsFormValid())
        {
            errorMessage = "Please fill in all required fields";
            return;
        }

        isRegistering = true;
        errorMessage = null;

        try
        {
            var request = new Models.TenantRegistrationRequest
            {
                OrganizationName = organizationName.Trim(),
                PrimaryAdminEmail = adminEmail.Trim(),
                Settings = new Models.TenantSettingsDto
                {
                    CompanyWebsite = string.IsNullOrWhiteSpace(companyWebsite) ? null : companyWebsite.Trim(),
                    Industry = string.IsNullOrWhiteSpace(industry) ? null : industry,
                    Country = string.IsNullOrWhiteSpace(country) ? null : country
                }
            };

            Logger.LogInformation("Registering tenant: {OrgName}", request.OrganizationName);
            
            var response = await ApiClient.RegisterTenantAsync(request);
            
            if (response != null)
            {
                Logger.LogInformation("Tenant registered successfully with ID {TenantId}", response.TenantId);
                
                // Registration successful - redirect to consent page
                Navigation.NavigateTo("/onboarding/consent", forceLoad: true);
            }
            else
            {
                errorMessage = "Registration completed but received an unexpected response. Please try refreshing the page.";
            }
        }
        catch (HttpRequestException ex)
        {
            Logger.LogError(ex, "HTTP error during tenant registration");
            
            if (ex.Message.Contains("409") || ex.Message.Contains("Conflict"))
            {
                errorMessage = "This organization is already registered. Please contact support if you believe this is an error.";
            }
            else if (ex.Message.Contains("400") || ex.Message.Contains("Bad Request"))
            {
                errorMessage = "Invalid registration data. Please check your inputs and try again.";
            }
            else
            {
                errorMessage = "Unable to connect to the registration service. Please check your internet connection and try again.";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to register tenant");
            errorMessage = "An unexpected error occurred during registration. Please try again or contact support.";
        }
        finally
        {
            isRegistering = false;
        }
    }
}

<style>
    .card {
        border-radius: 12px;
    }

    .form-control, .form-select {
        border-radius: 8px;
    }

    .form-control-lg {
        padding: 0.75rem 1rem;
    }

    .btn-lg {
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
    }
</style>
