@page "/dashboard"
@attribute [Authorize]
@inject Services.ApiClient ApiClient
@inject NavigationManager Navigation
@inject ILogger<Dashboard> Logger

<PageTitle>Dashboard - ClientSpace</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1>Dashboard</h1>
        </div>
    </div>

    <!-- Permissions Warning Banner -->
    @if (showPermissionsWarning)
    {
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <strong>Action Required:</strong> Microsoft Graph permissions need to be granted.
                    <a href="/onboarding/consent" class="alert-link ms-2">Grant Permissions Now</a>
                    <button type="button" class="btn-close" @onclick="() => showPermissionsWarning = false"></button>
                </div>
            </div>
        </div>
    }

    @if (isLoadingDashboard)
    {
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;"></div>
                        <p class="mt-3 text-muted">Loading dashboard...</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (!string.IsNullOrEmpty(dashboardError))
    {
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-circle me-2"></i>
                    @dashboardError
                    <button class="btn btn-sm btn-outline-danger ms-3" @onclick="LoadDashboard">
                        <i class="bi bi-arrow-clockwise"></i> Retry
                    </button>
                </div>
            </div>
        </div>
    }
    else if (summary != null)
    {
        <!-- Quick Stats Cards -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="card border-primary">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-1">Client Spaces</h6>
                                <h2 class="mb-0">@summary.TotalClientSpaces</h2>
                                @if (summary.Limits.MaxClientSpaces.HasValue)
                                {
                                    <small class="text-muted">of @summary.Limits.MaxClientSpaces</small>
                                }
                                else
                                {
                                    <small class="text-success">Unlimited</small>
                                }
                            </div>
                            <div class="text-primary" style="font-size: 2.5rem;">
                                <i class="bi bi-folder-fill"></i>
                            </div>
                        </div>
                        @if (summary.Limits.ClientSpacesUsagePercent.HasValue)
                        {
                            <div class="progress mt-2" style="height: 5px;">
                                <div class="progress-bar @(summary.Limits.ClientSpacesUsagePercent > 80 ? "bg-warning" : "bg-primary")" 
                                     style="width: @summary.Limits.ClientSpacesUsagePercent%"></div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-3">
                <div class="card border-info">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-1">External Users</h6>
                                <h2 class="mb-0">@summary.TotalExternalUsers</h2>
                                @if (summary.Limits.MaxExternalUsers.HasValue)
                                {
                                    <small class="text-muted">of @summary.Limits.MaxExternalUsers</small>
                                }
                                else
                                {
                                    <small class="text-success">Unlimited</small>
                                }
                            </div>
                            <div class="text-info" style="font-size: 2.5rem;">
                                <i class="bi bi-people-fill"></i>
                            </div>
                        </div>
                        @if (summary.Limits.ExternalUsersUsagePercent.HasValue)
                        {
                            <div class="progress mt-2" style="height: 5px;">
                                <div class="progress-bar @(summary.Limits.ExternalUsersUsagePercent > 80 ? "bg-warning" : "bg-info")" 
                                     style="width: @summary.Limits.ExternalUsersUsagePercent%"></div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-3">
                <div class="card border-warning">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-1">Active Invitations</h6>
                                <h2 class="mb-0">@summary.ActiveInvitations</h2>
                                <small class="text-muted">Pending acceptance</small>
                            </div>
                            <div class="text-warning" style="font-size: 2.5rem;">
                                <i class="bi bi-envelope-fill"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-3">
                <div class="card @(summary.IsActive ? "border-success" : "border-danger")">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-1">Plan Tier</h6>
                                <h2 class="mb-0">@summary.PlanTier</h2>
                                @if (summary.TrialDaysRemaining.HasValue)
                                {
                                    <small class="@(summary.TrialDaysRemaining <= 3 ? "text-danger" : "text-warning")">
                                        @summary.TrialDaysRemaining days trial left
                                    </small>
                                }
                                else
                                {
                                    <small class="text-success">@summary.Status</small>
                                }
                            </div>
                            <div class="@(summary.IsActive ? "text-success" : "text-danger")" style="font-size: 2.5rem;">
                                <i class="bi bi-@(summary.IsActive ? "check-circle-fill" : "x-circle-fill")"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        @if (summary.QuickActions.Any())
        {
            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">
                                <i class="bi bi-lightning-fill"></i> Quick Actions
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                @foreach (var action in summary.QuickActions)
                                {
                                    <div class="col-md-3 mb-3">
                                        <button class="btn btn-outline-@GetActionButtonClass(action.Priority) w-100 text-start" 
                                                @onclick="() => HandleQuickAction(action)">
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-@action.Icon me-2" style="font-size: 1.5rem;"></i>
                                                <div>
                                                    <div class="fw-bold">@action.Label</div>
                                                    <small class="text-muted">@action.Description</small>
                                                </div>
                                            </div>
                                        </button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Subscription Details -->
        @if (!summary.IsActive || (summary.TrialDaysRemaining.HasValue && summary.TrialDaysRemaining.Value <= 7))
        {
            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="alert alert-@(summary.TrialDaysRemaining.HasValue && summary.TrialDaysRemaining.Value <= 3 ? "danger" : "warning")">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                @if (!summary.IsActive)
                                {
                                    <strong>Subscription Inactive:</strong>
                                    <span>Your subscription is not active. Please complete onboarding or upgrade your plan.</span>
                                }
                                else if (summary.TrialDaysRemaining.HasValue && summary.TrialDaysRemaining.Value <= 7)
                                {
                                    <strong>Trial Expiring Soon:</strong>
                                    <span>Your trial expires in @summary.TrialDaysRemaining days (@summary.TrialExpiryDate?.ToString("MMM dd, yyyy")). Upgrade now to continue using all features.</span>
                                }
                            </div>
                            <div>
                                <a href="/pricing" class="btn btn-@(summary.TrialDaysRemaining.HasValue && summary.TrialDaysRemaining.Value <= 3 ? "danger" : "warning")">
                                    <i class="bi bi-arrow-up-circle"></i> Upgrade Now
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }

    <!-- Client Spaces Section -->
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <span class="bi bi-folder-fill"></span> Client Spaces
                        </h5>
                        <button class="btn btn-light btn-sm" @onclick="ShowCreateClientModal">
                            <span class="bi bi-plus-circle"></span> Create Client Space
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Search Bar -->
                    @if (clients.Any())
                    {
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-search"></i>
                                    </span>
                                    <input type="text" 
                                           class="form-control" 
                                           placeholder="Search by client name or reference..." 
                                           @bind="searchQuery"
                                           @bind:event="oninput"
                                           @onkeyup="FilterClients" />
                                    @if (!string.IsNullOrEmpty(searchQuery))
                                    {
                                        <button class="btn btn-outline-secondary" @onclick="ClearSearch">
                                            <i class="bi bi-x-lg"></i>
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                    @if (isLoadingClients)
                    {
                        <div class="text-center my-4">
                            <div class="spinner-border" role="status"></div>
                            <p class="mt-2">Loading client spaces...</p>
                        </div>
                    }
                    else if (!string.IsNullOrEmpty(clientsError))
                    {
                        <div class="alert alert-danger">
                            @clientsError
                        </div>
                    }
                    else if (!clients.Any())
                    {
                        <div class="text-center my-5">
                            <span class="bi bi-folder-plus" style="font-size: 3rem; color: #ccc;"></span>
                            <p class="mt-3">No client spaces yet. Create your first one to get started!</p>
                            <button class="btn btn-primary" @onclick="ShowCreateClientModal">
                                <span class="bi bi-plus-circle"></span> Create Client Space
                            </button>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Client Reference</th>
                                        <th>Client Name</th>
                                        <th>Status</th>
                                        <th>External Users</th>
                                        <th>Documents</th>
                                        <th>SharePoint Site</th>
                                        <th>Created Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var client in filteredClients)
                                    {
                                        <tr>
                                            <td>@client.ClientReference</td>
                                            <td>@client.ClientName</td>
                                            <td>
                                                <span class="badge bg-@GetStatusBadgeClass(client.ProvisioningStatus)">
                                                    @client.ProvisioningStatus
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">
                                                    @GetExternalUserCount(client.Id) users
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">
                                                    @GetDocumentCount(client.Id) docs
                                                </span>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(client.SharePointSiteUrl))
                                                {
                                                    <a href="@client.SharePointSiteUrl" target="_blank">
                                                        Open Site <span class="bi bi-box-arrow-up-right"></span>
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Pending</span>
                                                }
                                            </td>
                                            <td>@client.CreatedDate.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <button class="btn btn-sm btn-outline-primary"
                                                            @onclick="() => ViewClient(client.Id)"
                                                            title="View Details">
                                                        <span class="bi bi-eye"></span> View
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-success"
                                                            @onclick="() => InviteUser(client.Id)"
                                                            title="Invite External User">
                                                        <span class="bi bi-person-plus"></span> Invite
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        @if (filteredClients.Count == 0 && !string.IsNullOrEmpty(searchQuery))
                        {
                            <div class="alert alert-info text-center">
                                No client spaces match your search criteria.
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- SPFx Installation Section -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <span class="bi bi-download"></span> Install SPFx Client
                    </h5>
                </div>
                <div class="card-body">
                    <p>To use the ClientSpace web parts in your SharePoint tenant, install the SPFx package:</p>
                    <ol>
                        <li>Download the latest <code>.sppkg</code> package file</li>
                        <li>Go to your SharePoint Admin Center → More features → Apps</li>
                        <li>Open the App Catalog</li>
                        <li>Upload the <code>.sppkg</code> file</li>
                        <li>Check "Make this solution available to all sites in the organization"</li>
                        <li>Click "Deploy"</li>
                    </ol>
                    <a href="https://github.com/orkinosai25-org/sharepoint-external-user-manager/releases" 
                       class="btn btn-info" target="_blank">
                        <span class="bi bi-download"></span> Download SPFx Package
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create Client Modal -->
@if (showCreateModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create New Client Space</h5>
                    <button type="button" class="btn-close" @onclick="HideCreateClientModal"></button>
                </div>
                <div class="modal-body">
                    @if (!string.IsNullOrEmpty(createError))
                    {
                        <div class="alert alert-danger">
                            @createError
                        </div>
                    }

                    <div class="mb-3">
                        <label class="form-label">Client Reference *</label>
                        <input type="text" class="form-control" @bind="newClientReference" 
                               placeholder="e.g., CLI-001" />
                        <small class="form-text text-muted">Unique identifier for this client</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Client Name *</label>
                        <input type="text" class="form-control" @bind="newClientName" 
                               placeholder="e.g., Smith & Associates" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" @bind="newClientDescription" 
                                  rows="3" placeholder="Optional description"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideCreateClientModal">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="CreateClient" disabled="@isCreatingClient">
                        @if (isCreatingClient)
                        {
                            <span class="spinner-border spinner-border-sm" role="status"></span>
                            <span> Creating...</span>
                        }
                        else
                        {
                            <span>Create Client Space</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .modal.show {
        display: block;
    }
</style>

@code {
    private bool isLoadingDashboard = true;
    private bool isLoadingClients = true;
    private bool showCreateModal = false;
    private bool isCreatingClient = false;
    private bool showPermissionsWarning = false;
    private string? dashboardError;
    private string? clientsError;
    private string? createError;
    private string searchQuery = string.Empty;
    
    private Models.DashboardSummaryResponse? summary;
    private List<Models.ClientResponse> clients = new();
    private List<Models.ClientResponse> filteredClients = new();

    private string newClientReference = string.Empty;
    private string newClientName = string.Empty;
    private string newClientDescription = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadDashboard();
        await LoadClients();
        await CheckPermissions();
    }

    private async Task CheckPermissions()
    {
        try
        {
            var permissions = await ApiClient.ValidatePermissionsAsync();
            if (permissions != null && !permissions.HasRequiredPermissions)
            {
                showPermissionsWarning = true;
            }
        }
        catch (Exception ex)
        {
            // If validation fails (e.g., tenant not yet connected), show warning
            Logger.LogWarning(ex, "Failed to validate permissions");
            showPermissionsWarning = true;
        }
    }

    private async Task LoadDashboard()
    {
        isLoadingDashboard = true;
        dashboardError = null;
        try
        {
            summary = await ApiClient.GetDashboardSummaryAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to load dashboard summary");
            dashboardError = "Failed to load dashboard. Please try refreshing the page.";
        }
        finally
        {
            isLoadingDashboard = false;
        }
    }

    private async Task LoadClients()
    {
        isLoadingClients = true;
        clientsError = null;
        try
        {
            clients = await ApiClient.GetClientsAsync();
            filteredClients = clients;
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to load clients");
            clientsError = "Failed to load client spaces. Please try refreshing the page.";
        }
        finally
        {
            isLoadingClients = false;
        }
    }

    private void HandleQuickAction(Models.QuickAction action)
    {
        Logger.LogInformation("Quick action triggered: {ActionId}", action.Id);

        switch (action.Type.ToLower())
        {
            case "modal":
                if (action.Id == "create-client")
                {
                    ShowCreateClientModal();
                }
                break;
            case "navigate":
                Navigation.NavigateTo(action.Action);
                break;
            case "external":
                // External links would open in new tab via href
                Navigation.NavigateTo(action.Action, true);
                break;
        }
    }

    private string GetActionButtonClass(string priority)
    {
        return priority.ToLower() switch
        {
            "primary" => "primary",
            "warning" => "warning",
            "danger" => "danger",
            _ => "secondary"
        };
    }

    private void FilterClients()
    {
        if (string.IsNullOrWhiteSpace(searchQuery))
        {
            filteredClients = clients;
        }
        else
        {
            var query = searchQuery.ToLower();
            filteredClients = clients.Where(c =>
                c.ClientName.ToLower().Contains(query) ||
                c.ClientReference.ToLower().Contains(query)
            ).ToList();
        }
    }

    private void ClearSearch()
    {
        searchQuery = string.Empty;
        filteredClients = clients;
    }

    private void ShowCreateClientModal()
    {
        newClientReference = string.Empty;
        newClientName = string.Empty;
        newClientDescription = string.Empty;
        createError = null;
        showCreateModal = true;
    }

    private void HideCreateClientModal()
    {
        showCreateModal = false;
    }

    private async Task CreateClient()
    {
        createError = null;

        if (string.IsNullOrWhiteSpace(newClientReference) || string.IsNullOrWhiteSpace(newClientName))
        {
            createError = "Client Reference and Client Name are required";
            return;
        }

        isCreatingClient = true;
        try
        {
            var request = new Models.CreateClientRequest
            {
                ClientReference = newClientReference.Trim(),
                ClientName = newClientName.Trim(),
                Description = string.IsNullOrWhiteSpace(newClientDescription) ? null : newClientDescription.Trim()
            };

            var result = await ApiClient.CreateClientAsync(request);
            if (result != null)
            {
                // Refresh client list
                await LoadClients();
                HideCreateClientModal();
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to create client");
            createError = "Failed to create client space. Please try again.";
        }
        finally
        {
            isCreatingClient = false;
        }
    }

    private void ViewClient(int clientId)
    {
        Navigation.NavigateTo($"/clients/{clientId}");
    }

    private void InviteUser(int clientId)
    {
        Navigation.NavigateTo($"/clients/{clientId}?action=invite");
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Completed" => "success",
            "Provisioning" => "warning",
            "Failed" => "danger",
            _ => "secondary"
        };
    }

    // Mock data for external user counts - In production, this would come from API
    private int GetExternalUserCount(int clientId)
    {
        // Generate consistent mock data based on client ID without Random
        return clientId % 15;
    }

    // Mock data for document counts - In production, this would come from API
    private int GetDocumentCount(int clientId)
    {
        // Generate consistent mock data based on client ID without Random
        return (clientId * 7) % 145 + 5;
    }
}
