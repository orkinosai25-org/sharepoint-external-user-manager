@* Generic skeleton component for client detail page *@

<div class="card">
    <div class="card-header bg-primary text-white">
        <div class="skeleton skeleton-text skeleton-text-lg" style="width: 200px; background: rgba(255, 255, 255, 0.3);"></div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="skeleton skeleton-text skeleton-text-sm mb-2" style="width: 60%;"></div>
                <div class="skeleton skeleton-text skeleton-text-md" style="width: 80%;"></div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="skeleton skeleton-text skeleton-text-sm mb-2" style="width: 60%;"></div>
                <div class="skeleton skeleton-text skeleton-text-md" style="width: 80%;"></div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="skeleton skeleton-text skeleton-text-sm mb-2" style="width: 60%;"></div>
                <div class="skeleton skeleton-text skeleton-text-md" style="width: 80%;"></div>
            </div>
        </div>
        @if (ShowExtraRows)
        {
            <div class="row mt-3">
                <div class="col-md-6 mb-3">
                    <div class="skeleton skeleton-text skeleton-text-sm mb-2" style="width: 50%;"></div>
                    <div class="skeleton skeleton-rect" style="height: 60px;"></div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="skeleton skeleton-text skeleton-text-sm mb-2" style="width: 50%;"></div>
                    <div class="skeleton skeleton-rect" style="height: 60px;"></div>
                </div>
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public bool ShowExtraRows { get; set; } = false;
}
