@* Skeleton loading component for quick actions section *@

<div class="card">
    <div class="card-header bg-light">
        <div class="skeleton skeleton-text skeleton-text-lg" style="width: 150px;"></div>
    </div>
    <div class="card-body">
        <div class="row">
            @for (int i = 0; i < ActionCount; i++)
            {
                <div class="col-md-3 mb-3">
                    <div class="skeleton-action-card">
                        <div class="d-flex align-items-center p-3">
                            <div class="skeleton skeleton-circle me-2" style="width: 2rem; height: 2rem;"></div>
                            <div class="flex-grow-1">
                                <div class="skeleton skeleton-text skeleton-text-md mb-1" style="width: 70%;"></div>
                                <div class="skeleton skeleton-text skeleton-text-sm" style="width: 90%;"></div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int ActionCount { get; set; } = 4;
}
