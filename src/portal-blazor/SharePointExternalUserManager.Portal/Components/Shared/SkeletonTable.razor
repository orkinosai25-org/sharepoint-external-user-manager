@* Skeleton loading component for table content *@

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                @foreach (var header in Headers)
                {
                    <th>@header</th>
                }
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < RowCount; i++)
            {
                <tr>
                    @foreach (var header in Headers)
                    {
                        <td>
                            <div class="skeleton skeleton-text skeleton-text-md" style="width: 80%;"></div>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    [Parameter]
    public List<string> Headers { get; set; } = new();

    [Parameter]
    public int RowCount { get; set; } = 3;

    protected override void OnParametersSet()
    {
        // Ensure Headers is never null to prevent errors in the foreach loop
        Headers ??= new List<string>();
    }
}
